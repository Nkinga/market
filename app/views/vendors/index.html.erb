<%= render 'shared/navigation' %>

  
  
  <div align="center">
    
    <% @vendors.each do |vendor| %>
      <ul class="listing">
        <div class="row">
          <div class=" well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(vendor), vendor_path(vendor) %></li>
            <li class="vendor-title"><%= link_to vendor.name.capitalize, vendor_path(vendor) %></li>
            
            <li><small><%= pluralize(vendor.products.count, "product") if vendor.products %></small></li>
          </div>
        </div>
      </ul>
    <% end %>
    
  </div>