<div align="center">
  <%= will_paginate %>
  <% @vendors.each do |vendor| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(vendor), vendor_path(vendor) %></li>
          <li class="vendor-title"><%= link_to vendor.name, vendor_path(vendor) %></li>
          
          <li><small><%= pluralize(vendor.products.count, "product") if vendor.products %></small></li>
          <% if logged_in? && current_vendor.admin? %>
            <li><%= link_to "delete", vendor, method: :delete,
                                        data: { confirm: "You sure?" } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>