<%= provide(title: @vendor.name) %>

<div class="row">
  <aside class="col-md-4 col-md-offset-2">
    <section class="vendor_info">
      <h1>
        <%= gravatar_for @vendor %>
        <%= @vendor.name %>
      </h1>
    </section>
  </aside>
  
  <div class="col-md-4">
    <p>You have <%= @vendor.categories.count %> categories.</p>
    <p>You have <%= @vendor.products.count %> products.</p>
  </div>
</div>
